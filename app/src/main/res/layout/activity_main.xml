<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/highlighted_text_material_light"
    tools:context="org.mssm.httpwww.calculator_2.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Input"
        android:id="@+id/current_input_view"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Output"
        android:id="@+id/output_view"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_columnSpan="4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clear_btn"
        android:layout_row="10"
        android:layout_column="0"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onClearClick"/>


    android:layout_margin="1dp"
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divide_btn"
        android:layout_row="10"
        android:layout_column="2"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:onClick="onOperatorClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/multiply_btn"
        android:layout_row="10"
        android:layout_column="3"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onOperatorClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:id="@+id/delete_btn"
        android:layout_row="10"
        android:layout_column="4"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDeleteClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/seven_btn"
        android:layout_row="11"
        android:layout_column="0"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/eight_btn"
        android:layout_row="11"
        android:layout_column="2"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/nine_btn"
        android:layout_row="11"
        android:layout_column="3"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/subtract_btn"
        android:layout_row="11"
        android:layout_column="4"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onOperatorClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/four_btn"
        android:layout_row="12"
        android:layout_column="0"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/five_btn"
        android:layout_row="12"
        android:layout_column="2"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/six_btn"
        android:layout_row="12"
        android:layout_column="3"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plus_btn"
        android:layout_row="12"
        android:layout_column="4"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onOperatorClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/one_btn"
        android:layout_row="13"
        android:layout_column="0"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two_btn"
        android:layout_row="13"
        android:layout_column="2"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/three_btn"
        android:layout_row="13"
        android:layout_column="3"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="()"
        android:id="@+id/parantheses_btn"
        android:layout_row="13"
        android:layout_column="4"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onParenthesisClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/zero_btn"
        android:layout_row="14"
        android:layout_column="0"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDigitClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/decimal_btn"
        android:layout_row="14"
        android:layout_column="2"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onDecimalClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="cnst"
        android:id="@+id/constants_btn"
        android:layout_row="14"
        android:layout_column="3"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onConstantsClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equals_btn"
        android:layout_row="14"
        android:layout_column="4"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="onEqualsClick"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="History"
        android:id="@+id/history_view_1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_rowSpan="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/history_view_2"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_rowSpan="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/history_view_3"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_rowSpan="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/history_view_4"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/history_view_5"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:text="Clear History"
        android:id="@+id/clear_history_btn"
        android:layout_row="8"
        android:layout_column="4"
        android:background="@color/accent_material_light"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:onClick="clear_history_onClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warning Messages Box"
        android:id="@+id/warning_view"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Input"
        android:id="@+id/textView"
        android:layout_row="7"
        android:layout_column="6" />

</GridLayout>
